{
  "expo": {
    "name": "승무원 준비생 앱",
    "slug": "flight-attendant-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "DETECT_SCREEN_CAPTURE"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      }
    },
    "platforms": ["ios", "android", "web"],
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "앱이 카메라에 접근하는 것을 허용하시겠습니까?"
        }
      ]
    ]
  }
} 